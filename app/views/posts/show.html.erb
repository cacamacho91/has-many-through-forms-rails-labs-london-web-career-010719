<h2> <%= @post.title %> </h2>

<p><%= @post.content %></p>

<h3>Post Tags</h3>
<ul>
  <% @post.categories.each do |cateogry| %>
    <li>
      <%= cateogry.name %>
    </li>
  <% end %>
</ul>

<h3><%= pluralize(@post.comments.count, 'Comment')%>:</h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= link_to comment.user.username, user_path(comment.user) %> -
      <%= comment.content %> (<%= time_ago_in_words(comment.created_at) %>)
    </li>
  <% end %>
</ul>
